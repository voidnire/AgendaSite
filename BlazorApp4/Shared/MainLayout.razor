@inherits LayoutComponentBase

<PageTitle>Agenda</PageTitle>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
 
<MudLayout>
    <MudAppBar Color="Color.Primary" Fixed="false">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle(Anchor.Start))"/>
        <MudText Typo="Typo.h6" Class="mx-lg-3">agenda</MudText>
        <MudSpacer></MudSpacer>

        <MudToggleIconButton @bind-Toggled="@DarkTheme"
                     Icon="@Icons.Material.Filled.WbSunny" Color="@Color.Warning" Title="Off"
                     ToggledIcon="@Icons.Material.Filled.ModeNight" ToggledColor="@Color.Info" ToggledTitle="On"/>

        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" />
    </MudAppBar>
    
    <MudDrawer @bind-Open="open" Anchor="@anchor" Variant="@DrawerVariant.Temporary" ClipMode="DrawerClipMode.Always" Elevation="2" Fixed="true">
        <NavMenu></NavMenu>
    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool open = false;
    Anchor anchor;
    public bool DarkTheme;

    void DrawerToggle(Anchor anchor)
    {
        open = true;
        this.anchor = anchor;

        //_drawerOpen = !_drawerOpen;
    }
}

